<%= form_for film do |f| %>
    
    <%= f.label :title, 'Título: ' %>
    <%= f.text_field :title %>
    <%= f.label :release_year, 'Lançamento: ' %>
    <%= f.number_field :release_year %>
    <%= f.label :summary, 'Sinopse: ' %>
    <%= f.text_field :summary %>
    <%= f.label :country, 'Páis de origem: '%>
    <%= f.text_field :country %>
    <%= f.label :duration, 'Duração(minutos): '%>
    <%= f.number_field :duration %>
    <%= f.label :director, 'Diretor: '%>
    <%= f.select :director, director %>
    <%= f.label :gender, 'Gênero: ' %>
    <%= f.select :gender, gender%>

    <%= f.submit 'Salvar' %>
<% end %> 